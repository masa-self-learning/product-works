<% provide(:title, "新規登録") %>

<h1 class="main-title text-white">Web日報登録</h1>
<%= form_for(resource, as: resource_name, url: registration_path(resource_name), :html => {:class => "border rounded bg-white form-login"}) do |f| %>
  <h2 class="h3 my-3">新規登録(管理者)</h2>
  <%= render "devise/shared/error_messages", resource: resource %>

  <div class="field">
    <%= f.text_field :name, class: "form-control rounded-pill mb-3 pt-3", placeholder: "名前" %>
  </div>

  <div class="field">
    <%= f.text_field :user_no, class: "form-control rounded-pill mb-3", placeholder: "社員番号 (数字4文字)" %>
  </div>
  
  <div class="field">
    <%= f.email_field :email, class: "form-control rounded-pill mb-3", autofocus: true, autocomplete: "email", placeholder: "メールアドレス" %>
  </div>

  <div class="field">
    <%= f.password_field :password, autocomplete: "new-password", class: "form-control rounded-pill mb-3", placeholder: "バスワード (6文字以上)" %>
  </div>

  <div class="field">
    <%= f.password_field :password_confirmation, autocomplete: "new-password", class: "form-control rounded-pill mb-3", placeholder: "バスワード (再確認)" %>
  </div>

  <div class="actions">
    <%= f.submit "登録", class: "btn btn-primary rounded-pill px-5 my-4" %>
  </div>
<% end %>