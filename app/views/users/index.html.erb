<% provide(:title, "社員一覧") %>

<h1 class="main-title text-white">Web日報登録（<%= current_admin.name %>）</h1>
<div class="border rounded bg-white form-user-list">
  <h2 class="h3 my-3">社員一覧</h2>
  <table class="table table-bordered">
    <thead>
      <tr class="bg-light">
        <th scope="col">社員番号</th>
        <th scope="col">社員名</th>
        <th scope="col">勤怠</th>
        <th scope="col">編集</th>
        <th scope="col">メールアドレス</th>
        <th scope="col">削除</th>
      </tr>
    </thead>
    <tbody>
      <% @users.each do |user| %>
        <tr>
          <th scope="row"><%= user.user_no %></th>
          <td><%= user.name %></td>
          <td>
            <%= link_to admin_works_path(id: user.id) do %>
              <i class="far fa-calendar-alt"></i>
            <% end %>
          </td>
          <td>
            <%= link_to edit_user_path(id: user.id) do %>
              <i class="fas fa-pen"></i>
            <% end %>
          </td>
          <td><%= user.email %></td>
          <td>
            <%= link_to  user_path(id: user.id), method: :delete, data: {confirm: "削除しますか？"} do %>
              <i class="fas fa-backspace"></i>
            <% end %>
          </td>
        </tr>
      <% end %>
    </tbody>
  </table>
</div>